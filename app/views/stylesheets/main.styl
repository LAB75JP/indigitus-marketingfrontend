term_green = #00CC00  
term_brown = #272822

body
  padding-top 20px
  padding-bottom 20px

.header,
.marketing,
.footer 
  padding-left 15px
  padding-right 15px

/* Make the masthead heading the same height as the navigation */
.header h3 
  margin-top 0
  margin-bottom 0
  line-height 40px
  padding-bottom 19px


/* Custom page footer */
.footer 
  padding-top 19px
  color #777
  border-top 1px solid #e5e5e5
  background-color: #eee


/* Customize container */
@media (min-width 768px) 
  .container 
    max-width 730px
  
.container-narrow > hr 
  margin 30px 0

/* Main marketing message and sign up button */
.jumbotron 
  text-align center
  border-bottom 1px solid #e5e5e5

.jumbotron .btn 
  font-size 21px
  padding 14px 24px

/* Supporting marketing content */
.marketing 
  margin 40px 0

.marketing p + h4 
  margin-top 28px



.main-container 
  

  ul 
    padding-left 13px
    li 
      margin-left 0

  .header 
    .btn-to-tour 
      background rgb(231,105,100)
      border-color rgb(231,105,100)
      margin-top 30px
    .map 
      max-width 100%
      
  .intro 
    margin-top 20px
    ul 
      li 
        font-size 18px
    p 
      max-width 650px
  
  .demo-teaser 
    margin-top 50px
    padding-bottom 40px
    min-height 300px
    h2 
      margin-bottom 30px
  

  .control-panel
    .ping-info
    .traceroute-info
        min-height 300px
        color term_green
        background term_brown
        border-top 1px solid term_green
        padding 20px
        ul 
          li
            list-style-type none
    .terminal 
      margin-top 100px
      background-color term_brown
    .ping-chart-wrapper
    .traceroute-chart-wrapper
      background #272822
      .ping-chart
      .traceroute-chart
        fill term_green
        .nv-axis
          .tick
            line 
              stroke term_brown
        .domain
          fill term_green
        .nv-axis
          fill term_green
        .nvd3
          .nv-axis 
            path
              stroke term_green
        .nv-bar
          text
            fill term_green
      
  .logo-wrapper 
    .logo
      display block
      background transparent url(/images/logo.svg) no-repeat 0 41px
      margin-left 0 !important
      padding 0
      overflow hidden
      text-indent 100%
      width 300px
      height 100px
      padding 0 0
      font-size 18px
      line-height 20px
  
    

  .landing-page
    .feature
      ul
        margin-top 15px
      h3 
        text-align center
      .img-wrapper 
        text-align center
        width 100%
        height 200px 
        background #eee
        padding 20px
        img 
          background none
          max-width 150px
          
  .start-instance 
    max-width 500px
    margin 0 auto
    h1 
      text-align center
    .time-left 
      font-size 15px
      text-align center
    .animated-ellipsis
      .one 
        opacity 0
        animation dot 1.3s infinite
        animation-delay 0.0s
        

      .two 
        opacity 0
        animation dot 1.3s infinite
        animation-delay 0.2s


      .three 
        opacity 0
        animation dot 1.3s infinite
        animation-delay 0.3s


@keyframes dot 
  0%  
    opacity 0 
  50%  
    opacity 0 
  100%  
    opacity 1 

@-webkit-keyframes dot 
  0%  
    opacity 0 
  50%  
    opacity 0 
  100%  
    opacity 1 

@-o-keyframes dot 
  0%  
    opacity 0 
  50%  
    opacity 0 
  100%  
    opacity 1 
