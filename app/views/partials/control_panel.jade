



.container.control-panel
  .row 
    .col-md-4
      .logo-wrapper 
        a.logo(href='/')=Indigitus
      p="Your Test Instance can be found at"
      a(href='http://{{instanceIp}}')='http://{{instanceIp}}'
    .col-md-8
      //- p='Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet.'
  
  .row 
    .col-md-12
      h1='Performance View'
      .row 
        .col-md-12 
          h3='Ping'
          .ping-chart-wrapper
            nvd3-discrete-bar-chart( id="pingChart",  noData="Start Test", class="ping-chart", objectEquality="true", delay="2400", data="pingsData", color="barColor", showXAxis="true", showYAxis="true", showValues="true", showLegend="true")
              extended-nvd3-discrete-bar-chart
          .ping-info
            p(ng-if="pingLines.length > 0").text-right="Average {{pingsAverage}}"
            div(ng-if="pingLines.length > 0")
              p="Output"
              ul 
                li(ng-repeat="line in pingLines")
                    {{line}}
          button.btn.btn-primary.btn-block.btn-start(ng-click="ping()", ng-disabled="pingsActive")="Start Test"
      .row
        .col-md-12 
          h3='Traceroute'
          .traceroute-chart-wrapper
            nvd3-discrete-bar-chart( id="tracerouteChart", noData="Start Test", objectEquality="true", delay="2400", data="tracerouteData", color="barColor", showXAxis="true", showYAxis="true", showValues="true", showLegend="true", class="traceroute-chart", tooltips="true", tooltipcontent="tracerouteTooltip")
              extended-nvd3-discrete-bar-chart
          .traceroute-info 
            div(ng-if="tracerouteLines.length > 0")
              p="Output"
              ul 
                li(ng-repeat="line in tracerouteLines")
                  {{line}}
          button.btn.btn-primary.btn-block(ng-click="traceroute()", ng-disabled="tracerouteActive")="Start Test"
      .row  
        .col-md-6 
          h3='Upload'
          p="1MB to server XYZ"
          .progress.progress-striped.active
            .progress-bar(style='width: 60%', role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')
                = "60%"
          p="Time: {{upload_time}} seconds"
          button.btn.btn-primary.btn-block.btn-start(ng-click="upload()")="Start Test"
        .col-md-6 
          h3='Download'
          p="11MB from imgur.com"
          .progress.progress-striped.active
            .progress-bar(style='width: {{downloadPercentage}}%',role='progressbar', aria-valuenow='{{downloadPercentage}}', aria-valuemin='0', aria-valuemax='100')
                = "{{downloadPercentage}}%"
          p="Time: {{upload_time}} seconds"
          button.btn.btn-primary.btn-block(ng-click="download()")="Start Test"
  .row 
    .col-md-12 
      <div terminal cb="onTerminalInput" width="100%" height="400" greetings="Connected to testinstance" prompt="testinstance:testuser$"></div>
