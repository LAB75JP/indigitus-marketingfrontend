  .row 
    .col-md-12
      h1='Performance View'
      .row 
        .col-md-6 
          h3='Ping'
          .ping-chart-wrapper
            nvd3-discrete-bar-chart( id="pingChart", class="ping-chart", objectEquality="true", delay="2400", data="pingsData", color="barColor", showXAxis="true", showYAxis="true", showValues="true", showLegend="true")
              extended-nvd3-discrete-bar-chart
          p="Average {{average}}"
          button.btn.btn-primary.btn-block(ng-click="ping()", ng-disabled="pingActive")="Start Test"
          
        .col-md-6 
          h3='Traceroute'
          button.btn.btn-primary.btn-block(ng-click="traceroute()")="Start Test"
      .row  
        .col-md-6 
          h3='Upload'
          p="1MB to server XYZ"
          .progress.progress-striped.active
            .progress-bar(style='width: 60%', role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')
                = "60%"
          p="Time: {{upload_time}} seconds"
          button.btn.btn-primary.btn-block(ng-click="upload()")="Start Test"
        .col-md-6 
          h3='Download'
          p="1MB from server XYZ"
          .progress.progress-striped.active
            .progress-bar(style='width: 60%', role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')
                = "60%"
          p="Time: {{upload_time}} seconds"
          button.btn.btn-primary.btn-block(ng-click="download()")="Start Test"
  .row 
    .col-md-12 
      <div terminal cb="onTerminalInput" width="100%" height="400" greetings="Connected to testinstance" prompt="testinstance:testuser$"></div>
