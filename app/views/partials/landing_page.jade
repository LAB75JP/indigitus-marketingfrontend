.container 
  .row 
    .col-md-6
        h1="Say Hello to Cloud Computing from Switzerland"
        p= "We offer secure and flexible infrastructures to make cloud computing painless"
    .col-md-6
        img(src='images/map.png', style="max-width: 70%")
  .row
    .col-md-12 
      form
        | <alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)">{{alert.msg}}</alert>
        div(vc-recaptcha='', ng-model="model.captcha", tabindex='3', theme='clean', key=req.config.recaptcha.publicKey)
        button.btn.btn-primary(ng-click="checkCaptcha()")
          = "Try now!"
          
